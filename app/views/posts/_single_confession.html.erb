<div class="single-confession">
<div class="panel">
    <div class="white-panel">
      Location: <%= @post.location %>
    </div>
  </div><!--/.panel-->
  <div class="panel white-panel"> 
      More Info: <%= @post.adtext %>
  </div><!--/.black-panel-->
  <div class="btn-group" >
  <%= render partial: 'vote_buttons', :locals => {:post => @post} %>
  <% if can? :edit, @post %>
      <button type="button" class="btn btn-default">
        <%= link_to "edit", edit_post_path(@post) %>
      </button>
    <% end %>
    <% if can? :destroy, @post %>
      <button type="button" class="btn btn-default">
      <%= link_to "delete", post_path(@post), :method => :delete,
      data: { confirm: 'Are you sure?' } %></button>
    <% end %>
  </div><!--/.btn-group-->
</div><!--/.single-confession-->
