<div class="panel">
  <%= comment.id %>:
  <%= comment.post_id %>th post 
  <%= comment.body %>
  <div class="btn-group">
    <% if can? :destroy, comment %>
      <button type="button" class="btn btn-small">
        <%= link_to "delete", post_comment_path(comment.post_id, comment.id), :method => :delete, data: {confirm: 'Are you sure?'} %>
      </button>
    <% end %>
  </div><!--/.btn-group-->
</div><!--/.panel-->
